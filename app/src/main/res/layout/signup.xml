<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/loginRelative"
    android:background="@mipmap/be_well"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/bottomBar"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/slect_parameter_bg"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="50dp"
                android:id="@+id/checkTermsConditions"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_height="50dp" />


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/TermsAndConditions"
                android:text="@string/terms_cond"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/sign_up"
            android:layout_margin="10dp"
            android:id="@+id/btnLoginSignUp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/slect_parameter_bg"
        android:layout_height="wrap_content"
        android:id="@+id/security_question"

        android:layout_above="@+id/bottomBar"
        android:layout_alignParentStart="true">




        <TextView
            android:layout_width="match_parent"
            android:text="@string/security_ques"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:text="@string/security_question_1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/security_question_1"
            android:id="@+id/securityques1"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />


        <TextView
            android:layout_width="match_parent"
            android:text="@string/security_question_2"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/security_question_2"
            android:background="@android:color/transparent"
            android:id="@+id/securityques2"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />


        <TextView
            android:layout_width="match_parent"
            android:text="@string/security_question_3"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/security_question_3"
            android:background="@android:color/transparent"
            android:id="@+id/securityques3"
            android:textColor="@color/black"

            android:textColorHint="@color/white"
             />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/slect_parameter_bg"
        android:layout_height="wrap_content"
        android:id="@+id/loginLayout"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/security_question"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:textColor="@color/black"
            android:padding="5dp"
            android:hint="@string/email"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/password"
            android:background="@android:color/transparent"
            android:id="@+id/password"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:textColorHint="@color/white"

            />

    </LinearLayout>
</RelativeLayout>

