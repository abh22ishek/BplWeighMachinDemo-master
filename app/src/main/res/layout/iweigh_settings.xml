<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bpl_be_well_parameter_bg"
    android:layout_height="match_parent">

    <include layout="@layout/baseheader"
        />


    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_item"
        android:layout_below="@+id/include"
        android:background="@drawable/settings_background"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        tools:ignore="UnknownIdInLayout">

    </ListView>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/first"
        android:background="@drawable/settings_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/list_item"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/protein"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginEnd="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"

                />



            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:id="@+id/toggleProtein"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/separator"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">




                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/obesity"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />



                <android.support.v7.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/toggleObesity"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/separator"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/body_age"
                android:textColor="@color/white"
                android:textSize="17sp"
                />



            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:id="@+id/toggleBodyAge"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="@color/separator"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:text="@string/lbm"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />



            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff=""
                android:textOn=""
                android:id="@+id/toggleLBM"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/second"
        android:background="@drawable/settings_background"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/first"
        >



    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:text="8 AM"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginEnd="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"

            />



        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:id="@+id/not1"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/separator"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">




        <TextView
            android:layout_width="wrap_content"
            android:text="12pm"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />



        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:id="@+id/not2"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/separator"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="6pm"
            android:textColor="@color/white"
            android:textSize="17sp"
            />



        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:id="@+id/not3"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




    </LinearLayout>
</RelativeLayout>