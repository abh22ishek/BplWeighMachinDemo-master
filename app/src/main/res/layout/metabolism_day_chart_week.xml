<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/meta_chart_week"
    android:layout_width="match_parent"
    android:background="@mipmap/bpl_be_well_parameter_bg"


    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/meta"


        android:visibility="visible"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <customviews.MyCustomTextView
            android:layout_width="match_parent"
            android:text="@string/metabolism_kcal_vs_time"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            app:fontname="centralSansXBold"

            android:id="@+id/txt_wt_chart"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layoutWeight"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <iweigh.IweighMetabolismYAxis
                android:layout_width="wrap_content"
                android:id="@+id/iweighMetabolismYaxis"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />






            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:fillViewport="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/HeartRate"

                    android:layout_height="wrap_content">




                    <canny.IweighMetabolismViewWeek
                        android:layout_width="match_parent"
                        android:id="@+id/metabolism_chart_week"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"


                        />


                </LinearLayout>

            </HorizontalScrollView>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>