<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">


<HorizontalScrollView
    android:layout_width="match_parent"
    android:padding="5dp"
    android:scrollbars="none"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="wrap_content"
    android:paddingStart="10dp"
    android:paddingBottom="6dp"
    android:paddingTop="8dp"
    android:layout_margin="5dp"

    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="21-03-2016 10:46:33"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/txtDateTime"
        android:textStyle="bold"
        android:layout_below="@+id/linearlayout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/linearlayout"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">



    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/txtSpo2"
        android:text="67"
        android:textColor="@color/header_itltle_color"
        android:textSize="24sp"

        />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="145"
        android:textStyle="bold"
        android:id="@+id/txtHeartRate"
        android:textColor="@color/header_itltle_color"
        android:textSize="24sp"
       />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="7.7 %"
        android:id="@+id/txtPI"
        android:textStyle="bold"
        android:textColor="@color/header_itltle_color"
        android:textSize="24sp"
        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgreport"
        android:layout_marginStart="10dp"
        android:src="@mipmap/report"
        android:contentDescription="@string/action_report_chart"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgchart"
            android:layout_marginStart="18dp"
            android:src="@mipmap/chart"
            android:contentDescription="@string/action_report"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgdelete"
            android:layout_marginStart="18dp"
            android:src="@mipmap/delete"
            android:contentDescription="@string/action_delete"

            />

    </LinearLayout>
</RelativeLayout>

    </HorizontalScrollView>

</android.support.v7.widget.CardView>